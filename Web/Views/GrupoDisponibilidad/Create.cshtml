
@{
    Layout = null;
}
<form name="form" class="container" style="margin-top:2%">
    <h2>Crear Disponibilidad De Grupo</h2>
    <div class="row">
        <div class="col-sm-12 col-md-4">
            <div class="row">
                <div class="col-sm-12">
                    <label for="unidad">Unidad</label><select class="form-control" ng-options="i.Id as i.Nombre for i in vm.listUnidades" ng-model="vm.entidad.UnidadId" ng-change="vm.changeUnidad()"></select>
                </div>
                <div class="col-sm-12">
                    <label for="departamento">Departamento</label><select class="form-control" ng-options="i.Id as i.Nombre for i in vm.listDepartamentos" ng-model="vm.entidad.DepartamentoId" ng-change="vm.changeDepartamento()"></select>
                </div>
                <div class="col-sm-12">
                    <label for="programaeducativo">Programa Educativo</label><select class="form-control" ng-options="i.Id as i.Nombre for i in vm.listProgramasEducativos" ng-model="vm.entidad.ProgramaEducativoId" ng-change="vm.changeProgramaEducativo()"></select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <label for="programaeducativo">Maestro</label><select name="maestro" class="form-control" ng-options="i.Id as i.Nombre for i in vm.listMaestros" ng-model="vm.entidad.MaestroId" ng-change="vm.changeMaestro()" required></select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <label for="programaeducativo">Trimestre</label><select name="trimestre" class="form-control" ng-options="i.Id as i.Nombre for i in vm.listTrimestres" ng-model="vm.entidad.TrimestreId" ng-change="vm.changeTrimestre()" required></select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <label for="programaeducativo">Materia</label><select name="materia" class="form-control" ng-options="i.Id as i.Nombre for i in vm.listMaterias" ng-model="vm.entidad.MateriaId" required></select>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <label for="programaeducativo">Grupo</label><select name="grupo" class="form-control" ng-options="i.Id as i.Nombre for i in vm.listGrupos" ng-model="vm.entidad.GrupoId" required></select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <label for="programaeducativo">Dia</label><select name="dia" class="form-control" ng-options="i.Id as i.Nombre for i in vm.listDias" ng-model="vm.entidad.Dia" required></select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <label for="programaeducativo">Modulo</label><select name="modulo" class="form-control" ng-options="i.Id as i.Nombre for i in vm.listModulos" ng-model="vm.entidad.ModuloId" required></select>

                </div>
                
            </div><br />
        </div>
        <div class="col-sm-12 col-md-8">
            <div class="col-sm-12">
                <div ng-show="vm.Disponibilidad!=undefined"><div uib-alert style="background-color:#3c763d;color:white">Disponibilidad :{{vm.Disponibilidad.Disponibilidad}}</div></div>
            </div>
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table table-condensed table-striped">
                        <tr>
                            <th>Maestro</th>
                            <th>Trimestre</th>
                            <th>Grupo</th>
                            <th>Materia</th>
                            <th>Dia</th>
                            <th>Modulo</th>
                        </tr>
                        <tr ng-repeat="i in vm.listDisponibilidades">
                            <td>{{i.Maestro}}</td>
                            <td>{{i.Trimestre}}</td>
                            <td>{{i.Grupo}}</td>
                            <td>{{i.Materia}}</td>
                            <td>{{i.Dia|filterDias}}</td>
                            <td>{{i.Modulo}}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div>
            <input type="button" value="Guardar" class="btn btn-success" ng-show="(!form.materia.$error.required&&!form.maestro.$error.required&&!form.grupo.$error.required&&!form.modulo.$error.required&&!form.dia.$error.required&&!form.trimestre.$error.required)" ng-click="vm.guardar()" />
            <input type="button" value="Cancelar" class="btn btn-default" ng-click="vm.list()" />
        </div>

    </div>
</form>
