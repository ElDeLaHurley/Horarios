
@{
    Layout = null;
}
<br />
<input type="button" value="Nuevo" class="btn btn-link" ng-click="vm.massCreate()" />
<form name="form" class="container" style="margin-top:2%">
    <h2> Disponibilidad De Grupo - Seleccione un Grupo para Detalles</h2>
    <div class="row">
        <div class="col-sm-12 col-md-4">
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <label for="unidad">Unidad</label><select class="form-control" ng-options="i.Id as i.Nombre for i in vm.listUnidades" ng-model="vm.entidad.UnidadId" ng-change="vm.changeUnidad()"></select>
                </div>
                <div class="col-sm-12 col-md-12">
                    <label for="departamento">Departamento</label><select class="form-control" ng-options="i.Id as i.Nombre for i in vm.listDepartamentos" ng-model="vm.entidad.DepartamentoId" ng-change="vm.changeDepartamento()"></select>
                </div>
                <div class="col-sm-12 col-md-12">
                    <label for="programaeducativo">Programa Educativo</label><select class="form-control" ng-options="i.Id as i.Nombre for i in vm.listProgramasEducativos" ng-model="vm.entidad.ProgramaEducativoId" ng-change="vm.changeProgramaEducativo()"></select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <label for="programaeducativo">Trimestre</label><select name="trimestre" class="form-control" ng-options="i.Id as i.Nombre for i in vm.listTrimestres" ng-model="vm.entidad.TrimestreId" ng-change="vm.changeTrimestre()" required></select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <label for="programaeducativo">Grupo</label><select name="grupo" class="form-control" ng-options="i.Id as i.Nombre for i in vm.listGrupos" ng-model="vm.entidad.GrupoId" required></select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <label for="programaeducativo">Dia</label><select name="dia" class="form-control" ng-options="i.Id as i.Nombre for i in vm.listDias" ng-model="vm.entidad.Dia" required ng-change="vm.changeDias()"></select>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-8">
            <div class="table-responsive">
                <table class="table table-condensed table-striped">
                    <tr>
                        <th>Grupo</th>
                        <th>Materia</th>
                        <th>Dia</th>
                        <th>Modulo</th>
                        <th>Maestro</th>
                        <th></th>
                    </tr>
                    <tr ng-repeat="i in vm.listGruposDisponibilidad">
                        <td>{{i.Grupo}}</td>
                        <td>{{i.Materia}}</td>
                        <td>{{i.Dia|filterDias}}</td>
                        <td>{{i.Modulo}}</td>
                        <td>{{i.Maestro}}</td>
                        <td><a href="" ng-click="vm.massEdit(i.Id)">Editar</a></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    
    
</form>
