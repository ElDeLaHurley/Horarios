
@{
    Layout = null;
}
<div class="container" style="margin-top:2%">
    <div class="row">
        <div class="col-sm-12 col-md-4">
            <div class="row">
                <div class="col-sm-12">
                    <label for="unidad">Unidad</label><select class="form-control" ng-options="i.Id as i.Nombre for i in vm.listUnidades" ng-model="vm.entidad.UnidadId" ng-change="vm.changeUnidad()"></select>
                </div>
                <div class="col-sm-12">
                    <label for="departamento">Departamento</label><select class="form-control" ng-options="i.Id as i.Nombre for i in vm.listDepartamentos" ng-model="vm.entidad.DepartamentoId" ng-change="vm.changeDepartamento()"></select>
                </div>
                <div class="col-sm-12">
                    <label for="programaeducativo">Programa Educativo</label><select class="form-control" ng-options="i.Id as i.Nombre for i in vm.listProgramasEducativos" ng-model="vm.entidad.ProgramaEducativoId" ng-change="vm.changeProgramaEducativo()"></select>
                </div>
                <div class="col-sm-12">
                    <label for="programaeducativo">Trimestre</label><select class="form-control" ng-options="i.Id as i.Nombre for i in vm.listTrimestres" ng-model="vm.entidad.TrimestreId" ng-change="vm.changeTrimestre()"></select>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-8">
            <div class="row" style="margin-top:2%">
                <div class="col-sm-12 col-md-6">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <td><b>Materias Disponibles</b></td>
                        </tr>
                        <tr ng-repeat="i in vm.listMaterias" ng-click="vm.cambiarMateria({i})" style="cursor:pointer">
                            <td>{{i.Nombre}}</td>
                        </tr>
                    </table>
                </div>
                <div class="col-sm-12 col-md-6">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <td><b>Materias Cargadas</b></td>
                        </tr>
                        <tr ng-repeat="i in vm.listMateriasCargadas" ng-click="vm.cambiarMateriaCargada({i})" style="cursor:pointer">
                            <td>{{i.Nombre}}</td>
                        </tr>
                    </table>
                </div>
            </div>
    </div>
    </div>
    <div class="row container" style="margin-top:2%">
        <div>
            <input type="button" value="Guardar" class="btn btn-success" ng-show="vm.listMateriasCargadas.length>0" ng-click="vm.guardar()" />
            <input type="button" value="Cancelar" class="btn btn-default" ng-click="vm.list()" />
        </div>

    </div>
</div>
