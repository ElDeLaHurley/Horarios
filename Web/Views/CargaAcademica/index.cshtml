        </div>
        <div class="row">
            <div class="col-sm-12">
                <label for="programaeducativo">Maestro</label><select name="maestro" class="form-control" ng-options="i.Id as i.Nombre for i in vm.listMaestros" ng-model="vm.entidad.MaestroId" ng-change="vm.changeMaestro()" required></select>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <label for="programaeducativo">Trimestre</label><select name="trimestre" class="form-control" ng-options="i.Id as i.Nombre for i in vm.listTrimestres" ng-model="vm.entidad.TrimestreId" ng-change="vm.changeTrimestre()" required></select>
            </div>
        </div>
 
