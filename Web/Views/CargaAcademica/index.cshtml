    <div class="col-sm-12 col-md-4">
        <div class="row">
            <div class="col-sm-12">
                <label for="unidad">Unidad</label><select class="form-control" ng-options="i.Id as i.Nombre for i in vm.listUnidades" ng-model="vm.entidad.UnidadId" ng-change="vm.changeUnidad()"></select>
