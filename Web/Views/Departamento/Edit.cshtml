
@{
    Layout = null;
}
<form class="container" name="form">
    <h2>Edit Departamento</h2>
    <div class="row">
        <label class="col-sm-12 col-md-1">Nombre</label>
        <input type="text" ng-model="vm.entidad.Nombre" class="form-control col-sm-12 col-md-11" name="nombre" capitalize required /><label style="color:red;" ng-show="form.nombre.$error.required"> *</label>
    </div><br />
    <div class="row">
        <label class="col-sm-12 col-md-1">Unidad</label>
        <select ng-model="vm.entidad.UnidadId" ng-options="i.Id as i.Nombre for i in vm.listUnidades" class="form-control col-sm-12 col-md-11" required></select>
        <label style="color:red;" ng-show="form.unidadid.$error.required"> *</label>
    </div><br />
    <div class="row">
        <label class="col-sm-12 col-md-2">Jefe de Departamento</label>
        <input type="text" ng-model="vm.entidad.JefeDepartamento" class="form-control col-sm-11 col-md-10" name="jefedepartamento" capitalize required /><label style="color:red;" ng-show="form.jefedepartamento.$error.required"> *</label>
    </div><br />
    <div class="row">
        <input type="button" class="btn btn-success" value="Guardar" ng-click="vm.guardar()" ng-show="(!form.nombre.$error.required&&!form.unidadid.$error.required&&!form.jefedepartamento.$error.required)" />
        <input type="button" class="btn btn-default" value="Regresar" ng-click="vm.list()" />
    </div>
</form>


